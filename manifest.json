{

    "name": "Africaid",
    "description": "A free new-tab extension that generates donations for the African Library Project",
    "version": "1.0.0",
    "manifest_version": 2,
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "icons": { "128": "icon_128.png" },

    "permissions": [
        "activeTab"
    ],

    "chrome_url_overrides": {
        "newtab": "index.html"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval' https://www.gstatic.com/ https://www.googleapis.com https://*.firebaseio.com; object-src 'self'; "

}